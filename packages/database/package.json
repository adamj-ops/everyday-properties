{
  "name": "@repo/database",
  "version": "0.0.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "analyze": "prisma generate --no-hints --schema=./prisma/schema.prisma",
    "build": "prisma generate --no-hints --schema=./prisma/schema.prisma",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx scripts/seed-simple.ts",
    "db:setup-rls": "tsx scripts/setup-rls.ts",
    "db:test-rls": "tsx scripts/test-rls-standalone.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@prisma/adapter-neon": "6.4.1",
    "@prisma/client": "^6.15.0",
    "@t3-oss/env-nextjs": "^0.13.4",
    "server-only": "^0.0.1",
    "undici": "^7.10.0",
    "ws": "^8.18.2",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "22.15.21",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "bufferutil": "^4.0.9",
    "prisma": "^6.15.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
